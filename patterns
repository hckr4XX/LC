    #include <stdio.h>
    
    int main() {
        for(int i = 1; i <= 5; i++) {
    
            int val = (i % 2 == 1) ? 1 : 0;  // reset per row
    
            for(int j = 1; j <= i; j++) {
                printf("%d", val);
                val = 1 - val;   // toggle
            }
            printf("\n");
        }
        return 0;
    }
