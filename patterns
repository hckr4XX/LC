# 01


1
01
101
0101
10101

    #include <stdio.h>
    
    int main() {
        for(int i = 1; i <= 5; i++) {
    
            int val = (i % 2 == 1) ? 1 : 0;  // reset per row
    
            for(int j = 1; j <= i; j++) {
                printf("%d", val);
                val = 1 - val;   // toggle
            }
            printf("\n");
        }
        return 0;
    }



#02

A
B B
C C C
D D D D
E E E E E


        #include <stdio.h>
        
        int main() {
            for (int i = 1; i <= 5; i++) {
                char ch = 'a' + (i - 1);   // decide character for the row
        
                for (int j = 1; j <= i; j++) {
                    printf("%c", ch);
                }
                printf("\n");
            }
            return 0;
        }





#03


e
de
cde
bcde
abcde



        #include <stdio.h>
        
        int main() {
            for (int i = 1; i <= 5; i++) {
                char val = 'e' - (i - 1);   // starting character for the row
        
                for (int j = val; j <= 'e'; j++) {
                    printf("%c", j);
                }
                printf("\n");
            }
            return 0;
        }


